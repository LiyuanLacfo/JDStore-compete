<div class="container-fluid">
	<div class="col-md-12">
		<h2>购物明细</h2>
		<table class="table">
			<thead>
				<tr>
					<td>商品名称</td>
					<td>单价</td>
					<td>数量</td>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => "order_item_list", :collection => @cart_items, :as => :cart_item %>
			</tbody>
		</table>
		<div>
			<span class="pull-right">￥<%= render_total_price(current_cart) %></span>
		</div>
		<hr>
		<h2>订单资讯</h2>
		<div class="order-form">
			<%= simple_form_for @order do |f| %>
				<legend>订货人</legend>
				<div class="form-group col-lg-6">
					<%= f.input :billing_name %>
				</div>
				<div class="form-group col-lg-6">
					<%= f.input :billing_address %>
				</div>
				<legend>收货人</legend>
				<div class="form-group col-lg-6">
					<%= f.input :receive_name %>
				</div>
				<div class="form-group col-lg-6">
					<%= f.input :receive_address %>
				</div>
				<div class="checkout">
					<%= f.submit "生成订单", class: "btn btn-danger pull-right", data: { :disable_with => "Submitting..." } %>
				</div>
			<% end %>
		</div>
	</div>
</div>