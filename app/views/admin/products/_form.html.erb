<%= simple_form_for [:admin, @product] do |f| %>
	<div class="form-inputs">
		<%= f.input :title, required: false, input_html: { class: "form-control" } %>
		<%= f.input :description, required: false, input_html: { class: "form-control" } %>
		<%= f.input :price, required: false, input_html: { class: "form-control" } %>
		<%= f.input :storage, required: false, input_html: { class: "form-control" } %>
		<%= f.input :category, required: false, input_html: { class: "form-control" } %>
		<%= f.input :image, required: false, as: :file %>
	</div>
	<div class="form-actions">
		<%= f.submit "提交", class: "btn btn-success", :disable_with => "Submitting..." %>
	</div>
<% end %>