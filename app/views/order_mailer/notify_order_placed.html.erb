<div class="row">
	<div class="col-md-12">
		<h2>订单明细</h2>
		<small><%= link_to("查看订单", order_url(@order.token)) %></small>
		<table class="table">
			<thead>
				<tr>
					<th>商品明细</th>
					<th>单价</th>
					<th>数量</th>
					<th>小计</th>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => "order_product_detail", :collection => @product_lists, :as => :product_list %>
			</tbody>
		</table>
		<div>总计: <%= @order.total %></div>
		<hr>
		<h2>寄送信息</h2>
		<table class="table table-striped table-bordered">
	      <tbody>
	        <tr>
	          <td> 订购人 </td>
	        </tr>
	        <tr>
	          <td>
	            <%= @order.billing_name %> - <%= @order.billing_address %>
	          </td>
	        </tr>
	        <tr>
	          <td> 收件者 </td>
	        </tr>
	        <tr>
	          <td>
	            <%= @order.receive_name %> - <%= @order.receive_address %>
	          </td>
	        </tr>
	      </tbody>
    	</table>
	</div>
</div>